print('-'*5,'Calculator','-'*5)
equation = input('Enter your calculation : ')
equation = equation.split(' ')

def another():
    ask = input('Is there any other calculation you want to try? (y/n) ')
    if ask == 'y':
        equation2 = input('Enter your calculation : ')
        equation2 = equation2.split(' ')
        if equation2[1] == '*':
            print(float(equation2[0]) * float(equation2[2]))
            another()
        elif equation2[1] == '/':
            print(float(equation2[0]) / float(equation2[2]))
            another()
        elif equation2[1] == '+':
            print(float(equation2[0]) + float(equation2[2]))
            another()
        elif equation2[1] == '-':
            print(float(equation2[0]) - float(equation2[2]))
            another()
        # Multiple calculation
        '''if equation2[3] == '*':'''


    elif ask == 'n':
        print('system-off')

def multiply():
    if equation[1] == '*':
        print(float(equation[0]) * float(equation[2]))
        another()

def add():
    if equation[1] == '+':
        print(float(equation[0]) + float(equation[2]))
        another()

def subtract():
    if equation[1] == '-':
        print(float(equation[0]) - float(equation[2]))
        another()

def divide():
    if equation[1] == '/':
        print(float(equation[0]) / float(equation[2]))
        another()

multiply()
add()
subtract()
divide()

